# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = latin1
end_of_line = crlf
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[**.php]
indent_style = space

[*.js]
indent_style = tab

[lib/**.js]
indent_style = space
indent_size = 2

[**.css]
indent_style = tab

[**.xod]
charset = utf-8-bom

[*.md]
charset = utf-8
